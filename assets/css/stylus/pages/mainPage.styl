.main_header
   
    background-color: rgba(249, 250, 251, 1);
    border-bottom: 1px solid rgba(236, 239, 241, 1);
    .logo
        margin-top: 12px
        img 
            height: 32px;
    h1
        margin-top: 18px
        font-size: 20px;
        font-weight: bold;
        line-height: 1
        margin-right: 13px
        margin-left: 50px
    nav
        margin-left: 30px
        li
            float: right 
            margin-right: 20px
            list-style:none
            a
                font-size: 14px
                text-decoration: none
                position relative
                padding: 14px 0
                display: inline-block;
                &.sub_menu
                    margin-left 10px
                    &::before
                        content: " ";
                        top: 23px;
                        position: absolute;
                        background-image: url(../img/left-arrow.svg);
                        background-repeat: no-repeat;
                        background-position: left center;
                        left: -12px;
                        z-index: 1000000000000000;
                        width: 10px;
                        height: 10px;
                &::after
                    content: "";
                    height: 0px;
                    background-color: #000;
                    position: absolute;
                    bottom: 0px;
                    right: 0;
                    left: 0;
                    /* padding-bottom: 5px; */
                    border-radius: 10px;
                    transition: height 0.1s;
                &:hover
                    font-weight: bold;
                    &::after
                        content: "";
                        height: 3px; 
                    
    .search_box
        margin-top: 14px
        input
            background-image: url(../img/magnifying-glass.svg)
            background-repeat: no-repeat
            background-position: 10px center
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 15px;
            font-size: 12px;
            padding: 7px;
            width: 140px;
            transition: all .3s ease-out
            &:focus
                width 200px;